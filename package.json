{
  "name": "dds-validation",
  "version": "1.0.0",
  "description": "External Reference Number Portal for supplier-customer reference exchange",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "DATABASE_URL=postgresql://localhost/dds_validation ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate": "node dist/database/migrate.js",
    "migrate:dev": "ts-node src/database/migrate.ts",
    "migrate:phase2": "ts-node src/database/migrate-v2.ts",
    "migrate:phase2:sqlite": "ts-node src/database/migrate-v2-sqlite.ts",
    "migrate:phase2:postgresql": "ts-node src/database/migrate-v2-postgresql.ts",
    "migrate:admin": "ts-node src/database/migrate-admin-data.ts"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "playwright": "^1.54.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "reference-portal",
    "supplier",
    "customer",
    "validation"
  ],
  "author": "",
  "license": "ISC"
}
